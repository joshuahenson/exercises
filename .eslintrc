{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
   },
   "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true,
   },
   "rules": {
     "no-underscore-dangle": 0,
     "global-require": 0,
     "comma-dangle": 0,
     "react/prefer-stateless-function": 0,
     "max-len": [1, 100, 4, { "ignoreComments": true, "ignoreUrls": true }]
   },
}
